<article class="strips__strip <%= messages.fizzbuzz %>">
    <div class="strip__content">
        <h1 class="strip__title" data-name="Lorem">FizzBuzz</h1>
        <div class="strip__inner-text">
        <h2>FizzBuzz</h2>
        <p>Please input the number that you want!!</p>
        <div class="ui container">
            <form action="/fizzbuzz" method="post" name="form1">
            <div class="ui segment">
                <div class="ui form">
                    <div class="field">
                    <input placeholder="Please input number" type="text" name="value" id="value" value="<%= value %>">
                    </div>
                <input class="ui submit button" type="submit" value="FizzBuzz" />
                </div>
            </div>
            </form>

            <% if (messages.success) { %>
            <div class="ui success message">
                <div class="header">Success</div>
            </div>
            <div class="ui success message" style="max-height: 300px; overflow-x: scroll;">
            <table class="ui inverted blue table">
                <thead>
                <th>No.</th>
                <th>Value</th>
                </thead>
                <tbody>
                <% for (var key in messages.success) { %>
                <tr>
                    <td><%= messages.success[key].num %></td>
                    <td><%= messages.success[key].val %></td>
                </tr>
                <% } %>
                </tbody>
            </table>
            </div>
            <% } %>
            <% include error %>
        </div>
        </div>
    </div>
</article>